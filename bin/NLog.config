<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

  <!-- 
  See https://github.com/nlog/nlog/wiki/Configuration-file 
  for information on customizing logging rules and outputs.
   -->
  <targets>
    <!-- add your targets here -->

    <!--
    <target xsi:type="File" name="f" fileName="${basedir}/logs/${shortdate}.log"
            layout="${longdate} ${uppercase:${level}} ${message}" />
    -->
    <target xsi:type="File" name="Default" fileName="${basedir}/logs/default-${shortdate}.txt"
          layout="${longdate} ${uppercase:${level}} ${message}" />
    <!--<target xsi:type="File" name="Default" fileName="${basedir}/logs/${iis-site-name}/${date:format=yyyy}/${date:format=MM}/${date:format=dd}/default-${shortdate}.txt"
            layout="${longdate}|${uppercase:${level}}|${aspnet-request-method}|${aspnet-request-ip}|${aspnet-request-url}|${aspnet-request-querystring}|${aspnet-request-posted-body}|${aspnet-request-referrer}|${aspnet-request-useragent}|${message}" />
    <target xsi:type="File" name="Error" fileName="${basedir}/logs/${iis-site-name}/${date:format=yyyy}/${date:format=MM}/${date:format=dd}/default-${shortdate}.txt"
            layout="${longdate}|${uppercase:${level}}|${aspnet-request-method}|${aspnet-request-ip}|${aspnet-request-url}|${aspnet-request-querystring}|${aspnet-request-posted-body}|${aspnet-request-referrer}|${aspnet-request-useragent}|${message}" />
    <target xsi:type="File" name="MSMQ" fileName="${basedir}/logs/${iis-site-name}/${date:format=yyyy}/${date:format=MM}/${date:format=dd}/default-${shortdate}.txt"
             layout="${longdate}|${uppercase:${level}}|${aspnet-request-method}|${aspnet-request-ip}|${aspnet-request-url}|${aspnet-request-querystring}|${aspnet-request-posted-body}|${aspnet-request-referrer}|${aspnet-request-useragent}|${message}" />-->
  </targets>

  <rules>
    <!-- add your logging rules here -->

    <!--
    <logger name="*" minlevel="Trace" writeTo="f" />
    -->
    <logger name="Default" levels="Trace,Error,Info" writeTo="Default" />
    <logger name="Error" writeTo="Error" />
    <logger name="MSMQ" writeTo="MSMQ" />
  </rules>
</nlog>